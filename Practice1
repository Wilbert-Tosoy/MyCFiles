#include <stdio.h>
#include <stdbool.h>

int main() {
    bool powerButton = false;
    int choice;
    do {
        printf("1. ON\n2. OFF\n");
        printf("Enter: ");
        scanf("%d", &choice);
        if (choice == 1) {
            powerButton = true;
        }
    } while (powerButton == false);

    return 0;
}
